{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "allowArbitraryExtensions": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2020",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowImportingTsExtensions": true,
    "typeRoots": ["node_modules/@types", "libs/types"],
    "paths": {
      "@app/*": ["app/*"],
      "@libs/*": ["libs/*"],
      "@tk/*": ["tk/*"],
      "@data/*": ["data/*"],
      "$g/*": ["apps/graybin/*"]
    }
  }
}