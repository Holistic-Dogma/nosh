{
  "extends": "../../../jsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "target": "ES2018",
    "module": "NodeNext",
    "outDir": "../../../dist/@nosh/neoclassical"
  },
  "include": ["./src/**/*.{js|json}", "./index.js"],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./src/*": "./src/*",
    "./src/inc/*": "./src/inc/*"
  }
}